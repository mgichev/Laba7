<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey"
    tools:context=".ui.current_city.CurrentCityFragment">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/capitalTextView"
        android:layout_height="wrap_content"
        android:text="Город"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:layout_margin="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/countryTextView"
        android:layout_height="wrap_content"
        android:text="Страна: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/languageTextView"
        android:layout_height="wrap_content"
        android:text="Национальный язык: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/countryTextView"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/populationTextView"
        android:layout_height="wrap_content"
        android:text="Численность населения: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/languageTextView"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/squareTextView"
        android:layout_height="wrap_content"
        android:text="Площадь: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/populationTextView"
        android:textSize="20sp"
        android:layout_margin="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>